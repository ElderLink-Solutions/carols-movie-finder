<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:MovieFinder.ViewModels"
        xmlns:models="using:MovieFinder.Models"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
        x:Class="MovieFinder.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"

        <!-- Core Window Settings for a Modern Look -->
        Title="MovieFinder"
        SystemDecorations="None"
        WindowState="Maximized"
        Background="Transparent"
        TransparencyLevelHint="AcrylicBlur">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE -->
        <!-- We'll create some sample data to make the design look good -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <!-- Define the Theme and Global Styles Here -->
    <Window.Styles>
        <!-- Define our Purple Color Palette -->
        <SolidColorBrush x:Key="PrimaryBackground" Color="#1E1B2E"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#2A273F"/>
        <SolidColorBrush x:Key="PrimaryForeground" Color="#E0DDEF"/>
        <SolidColorBrush x:Key="AccentColor" Color="#7F5AF0"/>
        <SolidColorBrush x:Key="BorderColor" Color="#4A475F"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#2CB67D"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#EF4565"/>

        <!-- Global Style for all TextBlocks -->
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryForeground}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Global Style for all Buttons -->
        <Style Selector="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryForeground}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#9270F8"/>
        </Style>

        <!-- Global Style for all TextBoxes -->
        <Style Selector="TextBox">
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryForeground}"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Styles>

    <!-- Main Window Content with a background and rounded corners -->
    <Border Background="{StaticResource PrimaryBackground}"
            CornerRadius="12"
            Padding="0">

        <Grid RowDefinitions="Auto, *, Auto">

            <!-- ROW 0: Custom Title Bar / Window Chrome -->
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Background="#2A273F" PointerPressed="BeginMoveDrag">
                <TextBlock Grid.Column="0" Text="Carol's Movie Finder" FontWeight="Bold" Margin="16,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="—" Click="MinimizeWindow" Background="Transparent" Width="40"/>
                    <Button Content="☐" Click="MaximizeWindow" Background="Transparent" Width="40"/>
                    <Button Content="✕" Click="CloseWindow" Background="Transparent" Width="40"/>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#4A475F"/>
                    </Style>
                </StackPanel>
            </Grid>

            <!-- ROW 1: Main Content Area -->
            <Grid Grid.Row="1" Margin="24" RowDefinitions="Auto, *">

                <!-- Top Section: Status and Search -->
                <Grid Grid.Row="0" ColumnDefinitions="Auto, *" Margin="0,0,0,20">
                    <Border Grid.Column="0"
                            BorderBrush="{Binding BarcodeScannerStatus, Converter={StaticResource StatusToColorConverter}}"
                            BorderThickness="2" CornerRadius="8" Padding="12,8" Margin="0,0,20,0">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Scanner:" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding BarcodeScannerStatus}" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                        <TextBox Text="{Binding SearchQuery}" Watermark="Search for a movie..." Width="300"/>
                        <Button Command="{Binding SearchMoviesCommand}" Content="Search"/>
                    </StackPanel>
                </Grid>

                <!-- Movies List Section -->
                <ListBox Grid.Row="1" ItemsSource="{Binding Movies}" Background="Transparent" BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="models:Movie">
                            <!-- Each movie item has a modern card look -->
                            <Border Background="{StaticResource SecondaryBackground}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,0,8">
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel Grid.Column="0" Spacing="4">
                                        <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Director}" Opacity="0.7"/>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="{Binding Year}" Opacity="0.7" VerticalAlignment="Top"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- ROW 2: Bottom Action Bar -->
            <Border Grid.Row="2" Background="{StaticResource SecondaryBackground}" Padding="16">
                <Button Content="Add New Movie" HorizontalAlignment="Right"/>
            </Border>
        </Grid>
    </Border>
</Window>

