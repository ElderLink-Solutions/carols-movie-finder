<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:MovieFinder.ViewModels"
        xmlns:models="using:MovieFinder.Models"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MovieFinder.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <DockPanel Margin="10">
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File"/>
            <MenuItem Header="_Debug">
                <MenuItem Header="Debug Window" PointerPressed="OpenDebugWindow"/>
            </MenuItem>
        </Menu>

        <!-- Barcode Scanner Status Section -->
        <Border DockPanel.Dock="Top" Background="Salmon" CornerRadius="6" Padding="8" Margin="0,10,0,10">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Barcode Scanner Status:" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding BarcodeScannerStatus}" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Search Section -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Spacing="10">
            <TextBlock Text="Search Movies:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Text="{Binding SearchQuery}" Watermark="Search for a movie..." Width="300"/>
            <Button Command="{Binding SearchMoviesCommand}" Content="Search"/>
        </StackPanel>

        <!-- Movies List Section -->
        <TextBlock Text="Search Results:" FontWeight="Bold" Margin="0,10,0,0"/>
        <ListBox ItemsSource="{Binding Movies}" Margin="0,5,0,0">
            <ListBox.ItemTemplate>
                <DataTemplate x:DataType="models:Movie">
                    <StackPanel Spacing="5">
                        <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Year}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>



        <!-- Bottom Row Section -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
            <TextBlock Text="Add a new movie to the collection:" VerticalAlignment="Center"/>
            <Button Content="Add New Movie" HorizontalAlignment="Stretch"/>
        </StackPanel>
    </DockPanel>
</Window>
