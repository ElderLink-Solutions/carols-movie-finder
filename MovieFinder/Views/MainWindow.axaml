<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:MovieFinder.ViewModels"
        xmlns:models="using:MovieFinder.Models"
        xmlns:converters="using:MovieFinder.Converters"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
        x:Class="MovieFinder.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="MovieFinder"
        SystemDecorations="None"
        Width="800"
        Height="600"
        MinWidth="400"
        MinHeight="300"
        CanResize="True"
        WindowState="Normal"
        Background="Transparent"
        TransparencyLevelHint="AcrylicBlur">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <SolidColorBrush x:Key="PrimaryBackground" Color="#1E1B2E"/>
        <SolidColorBrush x:Key="SecondaryBackground" Color="#2A273F"/>
        <SolidColorBrush x:Key="PrimaryForeground" Color="#E0DDEF"/>
        <SolidColorBrush x:Key="AccentColor" Color="#7F5AF0"/>
        <SolidColorBrush x:Key="BorderColor" Color="#4A475F"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#2CB67D"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#EF4565"/>
    </Window.Resources>

    <Window.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryForeground}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style Selector="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryForeground}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#9270F8"/>
        </Style>

        <Style Selector="TextBox">
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryForeground}"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Styles>

    <Border Background="{StaticResource PrimaryBackground}"
            CornerRadius="12"
            Padding="0">

        <Grid RowDefinitions="Auto, *, Auto">

            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Background="#2A273F" PointerPressed="BeginMoveDrag">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="20" Margin="16,0">
                    <TextBlock Text="Carol's Movie Finder" FontWeight="Bold"/>
                    <CheckBox Content="Show Key Events Only" IsChecked="{Binding ShowKeyEventsOnly}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <StackPanel.Styles>
                        <Style Selector="Button:pointerover /template/ ContentPresenter">
                            <Setter Property="Background" Value="#4A475F"/>
                        </Style>
                    </StackPanel.Styles>
                    <Button Content="—" Click="MinimizeWindow" Background="Transparent" Width="40"/>
                    <Button Content="☐" Click="MaximizeWindow" Background="Transparent" Width="40"/>
                    <Button Content="✕" Click="CloseWindow" Background="Transparent" Width="40"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="24">
                <Grid RowDefinitions="Auto, *">
                    <Grid Grid.Row="0" ColumnDefinitions="Auto, *" Margin="0,0,0,20">
                        <Border Grid.Column="0"
                                BorderBrush="{Binding BarcodeScannerStatus, Converter={StaticResource StatusToColorConverter}}"
                                BorderThickness="2" CornerRadius="8" Padding="12,8" Margin="0,0,20,0">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="Scanner:" FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding BarcodeScannerStatus}" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                            <TextBox Text="{Binding SearchQuery}" Watermark="Search for a movie..." Width="300"/>
                            <Button Command="{Binding SearchMoviesCommand}" Content="Search"/>
                        </StackPanel>
                    </Grid>

                    <ListBox Grid.Row="1" ItemsSource="{Binding FilteredLogMessages}" Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Grid>

            <Border Grid.Row="2" Background="{StaticResource SecondaryBackground}" Padding="16">
                <Button Content="Add New Movie" HorizontalAlignment="Right" Command="{Binding AddNewMovieCommand}"/>
            </Border>
        </Grid>
    </Border>
</Window>