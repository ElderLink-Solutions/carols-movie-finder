<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:MovieFinder.ViewModels"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        x:Class="MovieFinder.Views.DebugWindow"
        x:DataType="vm:DebugWindowViewModel"
        Title="Debug Window">

    <Grid RowDefinitions="Auto, Auto, *, Auto" Margin="10">
        <StackPanel Grid.Row="0" Spacing="10">
            <Button Content="Check for Barcode Scanner" Command="{Binding CheckBarcodeScannerCommand}"/>
            <TextBlock Text="{Binding BarcodeScannerStatus}" HorizontalAlignment="Center"/>
            <StackPanel>
                <TextBlock Text="Device Information:" FontWeight="Bold"/>
                <TextBlock Text="{Binding DeviceInfo.VendorId, StringFormat='Vendor ID: {0}'}"/>
                <TextBlock Text="{Binding DeviceInfo.ProductId, StringFormat='Product ID: {0}'}"/>
                <TextBlock Text="{Binding DeviceInfo.SerialNumber, StringFormat='Serial Number: {0}'}"/>
            </StackPanel>
        </StackPanel>

        <TextBlock Grid.Row="1" Text="Application Log:" FontWeight="Bold" Margin="0,10,0,5"/>
        <ListBox Grid.Row="2" ItemsSource="{Binding LogMessages}" MaxHeight="200" VerticalAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
